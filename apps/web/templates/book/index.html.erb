<div class="container lotus-book-container">

  <div class="row">
    <% if books.any? %>
      <% books.each do |book|%>
        <div class="col-sm-6 col-md-3">
          <%=
            link_to(book.link, class: 'thumbnail') do
              img(src: "book.image_url", alt: "lotus bookshelf")
            end
          %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
